{% extends "layout.twig" %}

{% block content %}
<div class="max-w-6xl mx-auto mt-10 bg-white p-6 rounded shadow">

    <!-- Disputed Carpools Section -->
    <h2 class="text-2xl font-bold text-green-800 mb-6 text-center">Disputed Carpools</h2>

    {% if disputes is empty %}
        <p class="text-center text-gray-600">No disputes found.</p>
    {% else %}
        <table class="w-full text-sm border border-gray-300 mb-12">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="p-2 border">From</th>
                    <th class="p-2 border">To</th>
                    <th class="p-2 border">Driver</th>
                    <th class="p-2 border text-red-600">Flagged By</th>
                    <th class="p-2 border">Status</th>
                    <th class="p-2 border">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for carpool in disputes %}
                <tr class="hover:bg-gray-50">
                    <td class="p-2 border">{{ carpool.pickup_location }}</td>
                    <td class="p-2 border">{{ carpool.dropoff_location }}</td>
                    <td class="p-2 border text-sm">{{ carpool.driver_name }}</td>
                    <td class="p-2 border text-sm text-red-600">{{ carpool.flagged_by ?? 'N/A' }}</td>
                    <td class="p-2 border text-red-600 font-semibold">{{ carpool.status|capitalize }}</td>
                    <td class="p-2 border">
                        <div class="flex flex-col space-y-2 items-center">
                            <form method="POST" action="/employee/resolve/{{ carpool.id }}">
                                <button class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-xs w-full">
                                    Mark Resolved
                                </button>
                            </form>
                            <a href="/employee/dispute/{{ carpool.id }}" class="text-blue-600 hover:underline text-xs text-center">
                                View Details
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <!-- Resolved Carpools Section -->
    <h2 class="text-2xl font-bold text-gray-700 mb-6 text-center">Resolved Carpools</h2>

    {% if resolved is empty %}
        <p class="text-center text-gray-600">No resolved disputes.</p>
    {% else %}
        <table class="w-full text-sm border border-gray-300">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="p-2 border">From</th>
                    <th class="p-2 border">To</th>
                    <th class="p-2 border">Driver</th>
                    <th class="p-2 border text-red-600">Flagged By</th>
                    <th class="p-2 border">Status</th>
                    <th class="p-2 border">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for carpool in resolved %}
                <tr class="hover:bg-gray-50">
                    <td class="p-2 border">{{ carpool.pickup_location }}</td>
                    <td class="p-2 border">{{ carpool.dropoff_location }}</td>
                    <td class="p-2 border text-sm">{{ carpool.driver_name }}</td>
                    <td class="p-2 border text-sm text-red-600">{{ carpool.flagged_by ?? 'N/A' }}</td>
                    <td class="p-2 border text-gray-700 font-semibold">{{ carpool.status|capitalize }}</td>
                    <td class="p-2 border">
                        <div class="flex flex-col space-y-2 items-center">
                            <a href="/employee/dispute/{{ carpool.id }}" class="text-blue-600 hover:underline text-xs text-center">
                                View Details
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

</div>
{% endblock %}
