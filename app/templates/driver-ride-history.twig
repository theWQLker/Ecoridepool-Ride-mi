{% extends "layout.twig" %}

{% block content %}
<div class="max-w-2xl mx-auto mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-center mb-4">Driver Ride History</h2>

    {% if rides is empty %}
        <p class="text-gray-600 text-center">No rides found.</p>
    {% else %}
        <ul class="space-y-4">
            {% for ride in rides %}
                <li class="border-b pb-2">
                    <p><strong>Passenger ID:</strong> {{ ride.passenger_id }}</p>
                    <p><strong>Pickup:</strong> {{ ride.pickup_location }}</p>
                    <p><strong>Dropoff:</strong> {{ ride.dropoff_location }}</p>
                    <p><strong>Status:</strong> {{ ride.status|capitalize }}</p>
                    <p><small>{{ ride.created_at }}</small></p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
