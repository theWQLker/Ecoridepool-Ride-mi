{% extends "layout.twig" %}

{% block content %}
<div class="relative max-w-4xl mx-auto px-4 pt-6 text-white space-y-6">

    <!-- Scrollable Pending Requests -->
    <div class="overflow-y-auto max-h-[calc(100vh-16rem)] pb-28">
        <section>
            <h2 class="text-2xl font-bold mb-6 text-green-400">Pending Ride Requests</h2>

            {% if rideRequests is not empty %}
                <div class="grid grid-cols-1 gap-4">
                    {% for ride in rideRequests %}
                        <div class="bg-gray-700 rounded-xl p-3 shadow hover:shadow-lg transition">
                            <div class="flex justify-between items-center mb-2">
                                <h3 class="text-lg font-semibold">
                                    Pickup: <span class="text-green-300">{{ ride.pickup_location }}</span>
                                </h3>
                                <span class="text-sm text-gray-200">{{ ride.passenger_count }} passenger(s)</span>
                            </div>
                            <p class="text-sm mb-2">
                                Dropoff: <span class="text-gray-300">{{ ride.dropoff_location }}</span>
                            </p>

                            <form method="POST" action="/driver/accept-request/{{ ride.id }}">
                                <input type="hidden" name="_METHOD" value="PUT">
                                <button type="submit" class="bg-green-500 text-white px-4 py-1 rounded hover:bg-green-400">
                                    Accept Ride
                                </button>
                            </form>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center text-gray-400">No pending ride requests at the moment.</p>
            {% endif %}
        </section>
    </div>

    <!-- Fixed Active Rides (above bottom menu) -->
    <section class="fixed bottom-16 left-1/2 transform -translate-x-1/2 w-full max-w-4xl bg-gray-800 px-4 py-4 shadow-inner border-t border-gray-700 z-40">
        <h2 class="text-xl font-bold mb-4 text-green-300 text-center">Active Rides</h2>

        {% if activeRides is not empty %}
            <div class="grid grid-cols-1 gap-4">
                {% for ride in activeRides %}
                    <div class="bg-gray-700 rounded-xl p-4 shadow hover:shadow-lg transition">
                        <div class="flex justify-between items-center mb-2">
                            <h3 class="text-lg font-semibold">
                                Pickup: <span class="text-yellow-300">{{ ride.pickup_location }}</span>
                            </h3>
                            <span class="text-sm text-gray-400">{{ ride.status|capitalize }}</span>
                        </div>
                        <p class="text-sm mb-4">
                            Dropoff: <span class="text-gray-300">{{ ride.dropoff_location }}</span>
                        </p>

                        <div class="flex space-x-4">
                            <form method="POST" action="/driver/complete-ride/{{ ride.id }}">
                                <input type="hidden" name="_METHOD" value="PUT">
                                <button class="bg-green-500 px-4 py-1 rounded hover:bg-green-600">Complete</button>
                            </form>
                            <form method="POST" action="/driver/cancel-ride/{{ ride.id }}">
                                <input type="hidden" name="_METHOD" value="PUT">
                                <button class="bg-red-500 px-4 py-1 rounded hover:bg-red-600">Cancel</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-400">No active rides in progress.</p>
        {% endif %}
    </section>
</div>

<script src="/js/driver-requests.js"></script>
{% endblock %}
