{% extends "layout.twig" %}

{% block title %}Available Carpools | EcoRide{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto p-4">
    <h2 class="text-2xl font-bold text-green-700 mb-6 text-center">Available Carpools</h2>

    <!-- Filter Form -->
    <form method="GET" class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4">
        <input type="text" name="pickup" placeholder="Departure" class="px-4 py-2 border rounded w-full"
               value="{{ filters.pickup|default('') }}">
        <input type="text" name="dropoff" placeholder="Destination" class="px-4 py-2 border rounded w-full"
               value="{{ filters.dropoff|default('') }}">
        <input type="number" name="min_seats" placeholder="Min Seats" min="1" class="px-4 py-2 border rounded w-full"
               value="{{ filters.min_seats|default('') }}">
        <select name="energy" class="px-4 py-2 border rounded w-full">
            <option value="">All Energy Types</option>
            <option value="electric" {% if filters.energy == 'electric' %}selected{% endif %}>Electric</option>
            <option value="hybrid" {% if filters.energy == 'hybrid' %}selected{% endif %}>Hybrid</option>
            <option value="diesel" {% if filters.energy == 'diesel' %}selected{% endif %}>Diesel</option>
            <option value="petrol" {% if filters.energy == 'petrol' %}selected{% endif %}>Petrol</option>
        </select>
        <button type="submit" class="md:col-span-4 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
            Apply Filters
        </button>
    </form>

    <!-- Results List -->
    {% if carpools is not empty %}
        <div class="space-y-4">
            {% for carpool in carpools %}
                <div class="bg-white rounded-xl shadow p-4">
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500"><strong>Departing: </strong>{{ carpool.departure_time }}</span>
                    </div>
                    <p class="text-sm text-gray-700 mt-2">
                        <strong>From:</strong> {{ carpool.pickup_location }}
                        <strong>To:</strong> {{ carpool.dropoff_location }}
                    </p>
                    <p class="text-sm text-gray-600 mt-1">
                    <strong>Driver:</strong> {{ carpool.driver_name }}
                    </p>
                    <p class="text-sm text-gray-600 mt-1">
                        <strong>Available Seats:</strong> {{ carpool.total_seats - carpool.occupied_seats }}
                    </p>
                    <div class="mt-4 text-right">
                    <span class="text-md text-green-600 font-medium">{{ carpool.energy_type|capitalize }}</span>
                        <a href="/carpools/{{ carpool.id }}" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
                            View Details
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center text-gray-500">No carpools available at the moment.</p>
    {% endif %}
</div>
{% endblock %}
